<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ImageViewLayout">
        <attr name="maxChildCount" format="integer"/>
        <attr name="needShowTotalTip" format="boolean"/>
        <attr name="supportAllChildDelete" format="boolean"></attr>
        <attr name="supportAllChildDeleteBesidesLast" format="boolean"></attr>
        <attr name="imageUrls" format="reference"/>
        <attr name="layoutStrategy">
            <enum name="grid" value="0"/>
            <enum name="special" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="DynamicInputView">
        <attr name="type">
            <flag name="input" value="0x1"/>
            <flag name="text" value="0x2"/>
            <flag name="spinner" value="0x3"/>
            <flag name="image" value="0x4"/>
        </attr>
        <attr name="labelText" format="string"/>
        <attr name="hintText" format="string"/>
        <attr name="errorText" format="string"/>
        <attr name="maxImageCount" format="integer"/>
        <attr name="spinnerEntries" format="reference"/>
        <attr name="nullable" format="boolean"/>
        <attr name="lines" format="integer"/>
        <attr name="maxLines" format="integer"/>
        <attr name="minLines" format="integer"/>
        <attr name="ignoreLastImageItem" format="boolean"/>
    </declare-styleable>
</resources>